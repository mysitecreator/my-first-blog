from aiogram import Bot, types, Dispatcher, executor

TOKEN = "5466660895:AAGdrcjJz9SbCXDQkLzgU9kPwQgrGF-9uyQ"

bot = Bot(token=TOKEN)
dp = Dispatcher(bot)

@dp.message_handler(commands=['start'])
async def start(msg: types.Message):
    keyboard = types.InlineKeyboardMarkup()
    row_btns1 = {types.InlineKeyboardButton('Это один', callback_data='1')}
    row_btns2 = {types.InlineKeyboardButton('Это два', callback_data='2')}
    row_btns3 = {types.InlineKeyboardButton('Это три', callback_data='3')}
    keyboard.row(*row_btns1)
    keyboard.row(*row_btns2)
    keyboard.row(*row_btns3)
    await msg.answer("Уже работает", reply_markup=keyboard)


@dp.callback_query_handler(lambda call: call.data == "1")
async def about_func(callback: types.CallbackQuery):
    await callback.answer()
    await callback.message.answer('Наша фирма занимается *работой*', parse_mode="MarkdownV2")
    

@dp.callback_query_handler(lambda call: call.data == "2")
async def about_func(callback: types.CallbackQuery):
    await callback.answer()


@dp.callback_query_handler(lambda call: call.data == "3")
async def about_func(callback: types.CallbackQuery):
    await callback.answer()


